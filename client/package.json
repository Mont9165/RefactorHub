{
  "name": "refactorhub",
  "version": "1.1.0",
  "description": "A Commit Annotator for Refactoring.",
  "author": "Ryo Kuramoto <kuramoto@se.cs.titech.ac.jp>",
  "private": true,
  "scripts": {
    "dev": "nuxi dev",
    "build": "nuxi build",
    "start": "nuxi preview",
    "generate": "nuxi generate",
    "generate:with-api": "run-s gen-api generate",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint --ext .ts,.vue --ignore-path .gitignore .",
    "lint:prettier": "prettier **/*.{ts,vue,scss} --check --ignore-path .gitignore",
    "lint:stylelint": "stylelint **/*.{vue,scss} --ignore-path .gitignore",
    "fix": "run-s fix:eslint fix:prettier",
    "fix:eslint": "npm run lint:eslint -- --fix",
    "fix:prettier": "npm run lint:prettier -- --write",
    "clear": "rimraf src/apis/generated",
    "gen-api": "openapi-generator-cli generate -g typescript-axios -i ../docs/swagger.yml -o ./src/apis/generated"
  },
  "dependencies": {
    "@types/lodash-es": "^4.17.8",
    "axios": "^1.4.0",
    "consola": "^3.2.3",
    "crypto-random-string": "^5.0.0",
    "lodash-es": "^4.17.21",
    "monaco-editor": "0.41.0",
    "nuxt": "^3.6.5",
    "object-hash": "^3.0.0"
  },
  "devDependencies": {
    "@mdi/js": "^7.2.96",
    "@nuxt/devtools": "^0.7.5",
    "@nuxt/types": "^2.17.1",
    "@nuxtjs/eslint-config-typescript": "^12.0.0",
    "@openapitools/openapi-generator-cli": "^2.7.0",
    "@types/object-hash": "^3.0.2",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-nuxt": "^4.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "postcss-html": "^1.5.0",
    "prettier": "^3.0.1",
    "rimraf": "^5.0.1",
    "sass": "^1.64.2",
    "stylelint": "^15.10.2",
    "stylelint-config-recommended-scss": "^12.0.0",
    "stylelint-config-recommended-vue": "^1.5.0",
    "stylelint-prettier": "^4.0.2",
    "stylelint-scss": "^5.0.1",
    "typescript": "^5.1.6",
    "vite-plugin-monaco-editor": "^1.1.0",
    "vite-plugin-vuetify": "^1.0.2",
    "vue-tsc": "^1.8.8",
    "vuetify": "^3.3.11"
  }
}
